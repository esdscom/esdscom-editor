
@inject NavigationManager nav

<div class="card border-dark mb-3">
	<div class="card-header">
		<div class="float-right">
			<p>@CardItem!.Title </p>
		</div>
		@if (hasImage)
		{
			<div vclass="float-left">
				<img src="@CardItem.ImageURL" height="30" width="30"/>
			</div>
		}
	</div>
	
	<div class="card-body">
		<p class="card-text"> @CardItem!.Comment</p>
		<hr />
		<button type="button" class="btn btn-primary" @onclick="@FollowActionLink">Go</button>
	</div>
	
</div>

@code
{
	[Parameter] public CardItem CardItem { get; set; }
	private bool hasImage;

	protected override async Task OnInitializedAsync()
	{
		await base.OnInitializedAsync();

		hasImage =!string.IsNullOrEmpty(CardItem.ImageURL);

    }

	private void FollowActionLink()
	{
		nav.NavigateTo(CardItem!.ActionLink!);
	}


}
