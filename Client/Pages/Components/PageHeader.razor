@inject NavigationManager nav

<div class="row pb-3">
    <div class="col-10">
        <h4>@Title</h4>
    </div>
    <div class="col-2">
        <button class="btn btn-link float-right" @onclick="GoBack">@BackText</button>
    </div>
</div>

@code
{
    [CascadingParameter] public AppState AppState { get; set; }

    [Parameter] public string Title { get; set; }

    [Parameter] public string BackToURL { get; set; } = "/";

    [Parameter] public string BackText { get; set; } = "Back";


    protected override void OnInitialized()
    {
        base.OnInitialized();  
    }

    private void GoBack()
    {
        nav.NavigateTo(BackToURL);
    }
} 

   
