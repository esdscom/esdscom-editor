@inject NavigationManager nav

<div class="row">
    <div class="col-10">
        <h4>@Title</h4>
    </div>
    <div class="col-2">
        <button class="btn btn-secondary float-right" @onclick="GoBack">@backToURLText</button>
    </div>
</div>

<hr />

@code
{
    [CascadingParameter] public AppState AppState { get; set; }

    [Parameter] public string Title { get; set; }

    string backToURL { get; set; } = "/";
    string backToURLText { get; set; } = "Back";

    protected override void OnInitialized()
    {
        base.OnInitialized();    

        if (!string.IsNullOrEmpty(AppState.BackToURL))
        {
            backToURL = AppState.BackToURL;
        }

        if (!string.IsNullOrEmpty(AppState.BackToURL))
        {
            backToURLText = AppState.BackToURLText;
        }

    }

    private void GoBack()
    {
        nav.NavigateTo(backToURL);

    }
} 

   
